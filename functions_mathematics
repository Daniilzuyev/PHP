$c = rand(1,6);
$abc;
for($i = 0; $i < 10; $i++) {
   switch ($c) {
   	case '1':
   		$abc[] = "string - 1";
   		break;
   	case '2':
   		$abc[] = "string - 2";
   		break;
   		case '3':
   		$abc[] = "string - 3";
   		break;
   		case '4':
   		$abc[] = "string - 4";
   		break;
   	default:
   		$abc[] = "underfind";
   		break;
   }
}
print_r($abc);

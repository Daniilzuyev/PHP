<?php 
 $file = fopen("a.txt", "a+t"); // переменная создает и открывает файл a.txt и 
// r  открывает и помещает курсор в начало
// r+ открывает и помещает курсор в начало и перезаписывает при наборе символов следующие символы
// w  открывает для чтения и записи ставит в начало и удаляет все символы
// a открывает и помещает в конец файла
// a+ для записи и чтения
// t позволяет вписывать новую строку, табуляция и т.д.
// fwrite($file, "Example\nText\nNext"); // создается файл а.txt и вводятся данные, указаные в ""
// fclose($file); // закрывает файл
$file = fopen ("a.txt", "r+t"); // считывает файл a.txt 
while (!feof($file)) {  // feof проверяет файл насколько мы его считали
    echo fread($file, 2)."<br />";	 // считывает $file по 2 символа
}
 fseek($file, 0); // переводит в самое начало файла
 echo fread($file, 3); // выведет первые 3 символа "Exa"
fclose($file);
echo "<hr />";
file_put_contents("c.txt", "TEST test Test"); // создаем c.txt и создаем текст в ""
echo file_get_contents("c.txt")."<br />"; // выводим весь файйл на экран
echo file_exists("c.txt")."<br />"; // проверяем на существование a.txt 1 - существует
echo filesize("c.txt")."<br />"; // проверяем размерность файла в байтах

rename ("c.txt", "b.txt"); // переименовывает файл с на файл b
//unlink("b.txt"); // удаляет файл b.txt

 ?>

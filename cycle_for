<?php 
// вывод через 1 элемент
$user_list = array("Serg", "Andrew", "Ivan", "Mark", "Stephan", "Fadey");
for ($i=0; $i < count($user_list); $i++) { 
	 echo ($i + 1).") ".$user_list[$i]."<br />";
	   $i=$i+1;
}
?>


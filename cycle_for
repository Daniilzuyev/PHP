<?php 
// вывод среднего арифметического
$int = array(19,23,42,45,95.3);
$counter = 0;
for($i=0; $i < count($int); $i++){
  $counter += $int[$i];
}
  $result = $counter / count($int);
  echo $result;
  echo $counter."/".count($int)."=".$result."<hr />";
?>
